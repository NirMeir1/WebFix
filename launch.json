{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug FastAPI",
      "configurations": ["Run FastAPI"]
    }
  ],
  "configurations": [
    {
      "name": "Run FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.main:app",
        "--reload",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "justMyCode": false,
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    }
  ]
}